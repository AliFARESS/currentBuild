pipeline
{
  agent any
  stages
  {
    stage('Build')
	{
      steps
	  {
        echo 'Building...'
      }
	}
	stage('Test')
	{
      steps
	  {
        echo 'Testing...'
      }
	}
	stage('Deploy')
	{
      steps
	  {
        echo 'Deploying...'
      }

      post
	  {
        success
		{
          script
		  {
            currentBuild.result = 'FAILURE'
          }
        }
      }
    }
  }
  post
  {
    always
	{
      echo currentBuild.currentResult
    }
  }
}
